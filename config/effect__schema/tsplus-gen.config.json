{
  "project": {
    "packageName": "@effect/schema",
    "rootDir": "src",
    "tsconfig": "tsconfig.build.json",
    "exclude": ["**/internal/**"],
    "moduleConfig": {
      "@effect/schema": {
        "staticPrefixes": ["make", "from", "unsafeFrom"],
        "fluentNamespaces": ["effect/schema"]
      }
    }
  },
  "namespaces": [
    {
      "name": "effect/schema",
      "type": {
        "include": true,
        "includeCompanion": true,
        "companionSuffix": ".Ops"
      },
      "static": {
        "include": true,
        "staticSuffix": ".Ops"
      },
      "fluent": {
        "include": true,
        "includeStatic": true,
        "staticSuffix": ".Aspects"
      },
      "pipeable": {
        "include": true,
        "includeStatic": true,
        "staticSuffix": ".Aspects"
      },
      "getter": {
        "include": true,
        "includeStatic": true,
        "staticSuffix": ".Aspects"
      }
    }
  ],
  "additionalExtensions": [
    ["effect/schema/Parser#decode", "getter", "decode", "effect/schema/Schema"],
    [
      "effect/schema/Parser#decodeEither",
      "getter",
      "decodeEither",
      "effect/schema/Schema"
    ],
    [
      "effect/schema/Parser#decodeOption",
      "getter",
      "decodeOption",
      "effect/schema/Schema"
    ],

    ["effect/schema/Parser#encode", "getter", "encode", "effect/schema/Schema"],
    [
      "effect/schema/Parser#encodeEither",
      "getter",
      "encodeEither",
      "effect/schema/Schema"
    ],
    [
      "effect/schema/Parser#encodeOption",
      "getter",
      "encodeOption",
      "effect/schema/Schema"
    ],

    ["effect/schema/Parser#is", "getter", "guard", "effect/schema/Schema"],

    [
      "effect/schema/Parser#validate",
      "getter",
      "validate",
      "effect/schema/Schema"
    ],
    [
      "effect/schema/Parser#validateEither",
      "getter",
      "validateEither",
      "effect/schema/Schema"
    ],
    [
      "effect/schema/Parser#validateOption",
      "getter",
      "validateOption",
      "effect/schema/Schema"
    ],

    [
      "@effect/schema/data/Date#parseString",
      "getter",
      "parseDate",
      "effect/schema/Schema"
    ],
    [
      "@effect/schema/data/Number#parseString",
      "getter",
      "parseNumber",
      "effect/schema/Schema"
    ]
  ]
}
