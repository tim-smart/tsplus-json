{
  "project": {
    "packageName": "@fp-ts/core",
    "rootDir": "src",
    "tsconfig": "tsconfig.build.json",
    "exclude": ["**/internal/**"],
    "moduleConfig": {
      "@fp-ts/core": {
        "staticPrefixes": ["make", "from", "unsafeFrom"],
        "fluentNamespaces": ["fp-ts/core"]
      },
      "@fp-ts/core/Boolean": {
        "staticPrefixes": ["make", "from", "unsafeFrom"],
        "fluentNamespaces": []
      },
      "@fp-ts/core/typeclass": {
        "staticPrefixes": ["make", "from", "unsafeFrom"],
        "fluentNamespaces": ["@fp-ts/core/typeclass"]
      }
    }
  },
  "namespaces": [
    {
      "name": "fp-ts/core",
      "type": {
        "include": true,
        "includeCompanion": true,
        "companionSuffix": ".Ops"
      },
      "static": {
        "include": true,
        "staticSuffix": ".Ops"
      },
      "fluent": {
        "include": true,
        "includeStatic": true,
        "staticSuffix": ".Aspects"
      },
      "pipeable": {
        "include": true,
        "includeStatic": true,
        "staticSuffix": ".Aspects"
      },
      "getter": {
        "include": true,
        "includeStatic": true,
        "staticSuffix": ".Aspects"
      }
    }
  ],
  "additionalExtensions": [
    ["fp-ts/core/Equal#equals", "operator", "=="],
    ["fp-ts/core/Equal#equals", "operator", "==", "ReadonlyArray"],
    ["fp-ts/core/Equal#equals", "operator", "==", "fp-ts/data/Duration"],
    ["fp-ts/core/Equal#equals", "operator", "==", "fp-ts/core/Either"],
    ["fp-ts/core/Equal#equals", "operator", "==", "fp-ts/core/Option"],

    ["fp-ts/core/Either#right", "static", "__call", "fp-ts/core/Either.Ops"],

    [
      "fp-ts/core/Equivalence#make",
      "static",
      "__call",
      "fp-ts/core/Equivalence.Ops"
    ],

    ["fp-ts/core/Function/LazyArg#LazyArg", "type", "", "tsplus/LazyArgument"],

    ["fp-ts/core/Option#some", "static", "__call", "fp-ts/core/Option.Ops"]
  ]
}
